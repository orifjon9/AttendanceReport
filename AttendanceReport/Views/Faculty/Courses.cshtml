@using AttendanceReport.Models
@model IEnumerable<OfferedViewModel>
@{
    ViewBag.Title = "Faculty Courses";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    @if (Model != null)
    {
        <div class="col-sm-12">
            @if (Model != null && Model.Count() > 0)
            {
                <hr />
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <h3 class="panel-title">Courses</h3>
                    </div>

                    <table class="table table-hover" id="dev-table">
                        <thead>
                            <tr>
                                <th>CourseNumber</th>
                                <th>StartDate</th>
                                <th>Active</th>
                                <th>Capacity</th>
                                <th>DistanceEducation</th>
                                <th>Enrolled</th>
                                <th>Period</th>
                                <th>Attendance</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (OfferedViewModel item in Model.OrderBy(o=>o.StartDate))
                            {
                                <tr>
                                    <td>@item.CourseNumber</td>
                                    <td>@item.StartDate</td>
                                    <td>@item.Active</td>
                                    <td>@item.Capacity</td>
                                    <td>@item.DistanceEducation</td>
                                    <td>@item.Enrolled</td>
                                    <td>@item.Period</td>
                                    <td><a href="/Attendance/Course/@item.Id">view</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}